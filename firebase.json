{
  "hosting": {
    "public": "frontend/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "run": {
          "serviceId": "__SERVICE_ID__",
          "region": "__REGION__"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}

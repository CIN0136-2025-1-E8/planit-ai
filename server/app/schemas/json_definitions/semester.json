{
  "type": "object",
  "description": "A detailed plan for academic semesters, including courses, classes, evaluations, and general events.",
  "properties": {
    "semesters": {
      "type": "array",
      "description": "List of academic semesters.",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The name or identifier of the semester (e.g., '2025.1')."
          },
          "start_date": {
            "type": "string",
            "description": "Start date of the semester."
          },
          "end_date": {
            "type": "string",
            "description": "End date of the semester."
          },
          "classes": {
            "type": "array",
            "description": "List of courses for the semester.",
            "items": {
              "type": "object",
              "properties": {
                "class_title": {
                  "type": "string",
                  "description": "Title of the course."
                },
                "class_code": {
                  "type": "string",
                  "description": "Code for the course."
                }
              },
              "required": [
                "class_title"
              ]
            }
          }
        },
        "required": [
          "name",
          "start_date",
          "end_date",
          "classes"
        ]
      }
    },
    "semester_events": {
      "type": "array",
      "description": "General semester events, such as holidays.",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Title of the event."
          },
          "event_type": {
            "type": "string",
            "description": "Type of event (e.g., 'Holiday')."
          },
          "date": {
            "type": "string"
          },
          "start_time": {
            "type": "string"
          },
          "end_time": {
            "type": "string"
          }
        },
        "required": [
          "title",
          "event_type",
          "date"
        ]
      }
    },
    "llm_message": {
      "type": "string",
      "description": "The text response generated by the LLM based on content sent by the user and the structured data provided in the schema."
    }
  },
  "required": [
    "semesters",
    "semester_events",
    "llm_message"
  ]
}
{
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "O título do curso."
    },
    "semester": {
      "type": "string",
      "description": "O semestre em que o curso é oferecido. Exemplo: 2024.1"
    },
    "lectures": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "O título da aula."
          },
          "start_datetime": {
            "type": "string",
            "description": "A data e hora de início da aula no formato ISO 8601."
          },
          "end_datetime": {
            "type": "string",
            "description": "A data e hora de término da aula no formato ISO 8601."
          },
          "summary": {
            "type": "string",
            "description": "Um resumo do conteúdo abordado na aula."
          }
        },
        "required": [
          "title",
          "start_datetime",
          "end_datetime"
        ]
      }
    },
    "evaluations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "O tipo de avaliação.",
            "enum": [
              "exam",
              "quiz",
              "assignment",
              "presentation",
              "lab"
            ]
          },
          "title": {
            "type": "string",
            "description": "O título da avaliação."
          },
          "start_datetime": {
            "type": "string",
            "description": "A data e hora de início da avaliação no formato ISO 8601."
          },
          "end_datetime": {
            "type": "string",
            "description": "A data e hora de término da avaliação no formato ISO 8601."
          }
        },
        "required": [
          "type",
          "title",
          "start_datetime",
          "end_datetime"
        ]
      }
    }
  },
  "required": [
    "title",
    "lectures",
    "evaluations"
  ]
}